@model RestaurantReservationMVC.Models.TableModel

@{
    ViewData["Title"] = "Delete Table";
}

<h2>Delete Table</h2>

<h3>Are you sure you want to delete this table?</h3>
<div>
    <h4>Table</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Number
        </dt>
        <dd class="col-sm-10">
            @Model.Number
        </dd>
        <dt class="col-sm-2">
            Seats
        </dt>
        <dd class="col-sm-10">
            @Model.Seats
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            IsPopular
        </dt>
        <dd class="col-sm-10">
            @Model.IsPopular
        </dd>
        <dt class="col-sm-2">
            Material
        </dt>
        <dd class="col-sm-10">
            @Model.Material
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
