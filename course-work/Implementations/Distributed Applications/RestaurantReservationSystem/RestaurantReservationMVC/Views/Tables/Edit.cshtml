@model RestaurantReservationMVC.Models.TableModel

@{
    ViewData["Title"] = "Edit Table";
}

<h2>Edit Table</h2>

<form asp-action="Edit">
    <div>
        <label asp-for="Number"></label>
        <input asp-for="Number" />
        <span asp-validation-for="Number"></span>
    </div>
    <div>
        <label asp-for="Seats"></label>
        <input asp-for="Seats" />
        <span asp-validation-for="Seats"></span>
    </div>
    <div>
        <label asp-for="Location"></label>
        <input asp-for="Location" />
        <span asp-validation-for="Location"></span>
    </div>
    <div>
        <label asp-for="IsPopular"></label>
        <input asp-for="IsPopular" type="checkbox" />
        <span asp-validation-for="IsPopular"></span>
    </div>
    <div>
        <label asp-for="Material"></label>
        <input asp-for="Material" />
        <span asp-validation-for="Material"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
