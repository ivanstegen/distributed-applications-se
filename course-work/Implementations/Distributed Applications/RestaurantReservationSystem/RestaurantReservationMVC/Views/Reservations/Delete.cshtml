@model RestaurantReservationMVC.Models.ReservationModel

@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.ReservationDate
        </dd>
        <dt class="col-sm-2">
            Number of guests
        </dt>
        <dd class="col-sm-10">
            @Model.NumberOfGuests
        </dd>
        <dt class="col-sm-2">
            Table Number
        </dt>
        <dd class="col-sm-10">
            @Model.TableId
        </dd>
        <dt class="col-sm-2">
            SpecialRequests
        </dt>
        <dd class="col-sm-10">
            @Model.SpecialRequests
        </dd>
        <dt class="col-sm-2">
            VipGuests
        </dt>
        <dd class="col-sm-10">
            @Model.VipGuests
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
